%table.table.table-condensed.table-hover.text-center
  %thead
    %tr
      %th.text-center Адрес клиента
      %th.text-center ФИО клиента
      %th.text-center Сумма платежа
      %th

  %tbody
    - @payments.each do |payment|
      %tr
        %td.text-left= payment.client_address
        %td.text-left= payment.client_name
        %td.text-center= payment.payment_total

        %td
          %a{:href => '#', class: 'show_payment_details_for_new_connection',
                      'data-toggle' => 'tooltip',
                      title: 'Показать/Скрыть'}
            %i{class: 'glyphicon glyphicon-sort'}
          &nbsp
          = link_to edit_payment_path(payment),
                      'data-toggle' => 'tooltip',
                       title: 'Редактировать' do
            %i{class: 'glyphicon glyphicon-pencil'}
          &nbsp
          = link_to payment, :method => :delete,
                             :data => { :confirm => 'Точно?.. Уверен?..' },
                             'data-toggle' => 'tooltip',
                             title: 'Удалить' do
            %i{class: 'glyphicon glyphicon-remove'}
      %tr{class: 'detail_fields', id: "payment_details_for_new_connection_#{payment.id}"}
        %td{colspan: '6'}
          = render partial: 'payments/show_details_for_new_connection', locals: {payment: payment}