%table.table.table-sm.table-hover
  %thead.table-info
    %tr
      %th.text-center Дата
      %th.text-center Адрес клиента
      %th.text-center ФИО клиента
      %th.text-center Новый?
      %th.text-center Пополнение
      %th.text-center Материалы
      %th.text-center Всего
      %th

  %tbody
    - Payment.report_today.each do |payment|
      %tr
        %td.text-center= payment.created_at.strftime('%d.%m.%Y')
        %td.text-left= payment.client_address
        %td.text-left= payment.client_name
        %td.text-center
          - if payment.client_new_connection?
            %span.fa.fa-check
        %td.text-center= payment.client_payment
        %td.text-center= payment.used_material
        %td.text-center= payment.payment_total
        %td
          = link_to payment do
            %span.fa.fa-info{"aria-hidden" => "true"} &nbsp
          = link_to payment, :method => :delete,
                             :data => { :confirm => 'Точно?.. Уверен?..' } do
            %span.fa.fa-close{"aria-hidden" => "true"}

.row
  .col-4
    .card
      .card-header.card-info
        .text-center
          Всего клиентов:
      .card-block
        .text-center
          = Payment.report_today.total_and_percent_report(Payment.report_today)[2]
  .col-4
    .card
      .card-header.card-info
        .text-center
          Выручка за день:
      .card-block
        .text-center
          = Payment.report_today.total_and_percent_report(Payment.report_today)[0]
  .col-4
    .card
      .card-header.card-info
        .text-center
          Заработано (%):
      .card-block
        .text-center
          = Payment.report_today.total_and_percent_report(Payment.report_today)[1]