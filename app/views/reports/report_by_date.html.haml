.container-fluid
  = form_tag report_by_date_path, method: 'get', remote: true do
    .form-group
      .row
        .col
          = text_field_tag :start_date,
                           params[:start_date],
                           type: 'date',
                           value: Date.today.to_date,
                           max: Date.today.to_date,
                           class: 'form-control'
        .col
          = text_field_tag :end_date,
                           params[:end_date],
                           type: 'date',
                           value: Date.today.to_date,
                           max: Date.today.to_date,
                           class: 'form-control'
        .col-2
          = submit_tag 'Найти', class: "btn btn"

.report_by_date_total
.report_by_date_detail